<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >


    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" >

        <requestFocus />
    </EditText>

 

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
              <Button
        android:id="@+id/btn1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:text="+" />
               <Button
        android:id="@+id/btn2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:text="-" />
                <Button
        android:id="@+id/btn3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="*" />
                <Button
        android:id="@+id/btn4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="/" />
            
        </TableRow>


   
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                
             <Button
        android:id="@+id/btn5"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="1" />
              <Button
        android:id="@+id/btn6"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="2" />
               <Button
        android:id="@+id/btn7"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="3" />
                      <Button
        android:id="@+id/btn8"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="0" />
        </TableRow>
       
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             
                           <Button
        android:id="@+id/btn9"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="4" />
                                 <Button
        android:id="@+id/btn10"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="5" />
                                 <Button
        android:id="@+id/btn11"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="6" />
                                             <Button
        android:id="@+id/btn12"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="C" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                          <Button
        android:id="@+id/btn13"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="7" />
                     
              <Button
        android:id="@+id/btn14"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="8" />
                <Button
        android:id="@+id/btn15"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="9" />
                  <Button
        android:id="@+id/btn16"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:text="=" />
        </TableRow>
    </TableLayout>

 



  




   

   

   

</LinearLayout>